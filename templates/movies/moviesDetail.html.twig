{% extends 'base.html.twig' %}

{% block body %}
    <style>
			body { background-color: #2f4f4f; }
			.title { margin-left: 56.5rem; font-size: 48px; text-shadow: -1px -1px #9df, 1px 1px #49d, -3px 0 4px #000; font-family:"Segoe print", Arial, Helvetica, sans-serif; color:#6bf;}
		</style>


    {{ dump(movieDetail) }}
  <div class="example-wrapper">
    <div class="title">
      <h1>Film détail</h1>
    </div>
        <div class="container">
          <div class="text-center">
            <div class="row">
              <div class="col-lg-3">
                <div class="card">
                  <img class="card-img-top" src="{{ movieDetail.cover }}" alt="Card image cap">
                  <div class="card-body">
                    <h1 class="card-title"></h1>
                      <a href="{{ movieDetail.link }}">{{ movieDetail.name }}</a>
                        <p class="card-text"></p>
		              </div>
		            </div>
		          </div>
								<div class="card" style="width: 45rem;">
										<div class="card-body">
										 	<h5 class="card-title font-weight-bold">{{ movieDetail.name }}</h5>
										    <p class="card-text">{{ movieDetail.description }}</p>
										</div>
										  <ul class="list-group list-group-flush">
										    <li class="list-group-item">Nationalité : {{ movieDetail.country }}</li>
										    <li class="list-group-item">Date de réalisation : {{ movieDetail.date.format('d / m / Y') }}</li>
										  </ul>
										<div class="card-body">

										    <p>Appréciation globale : <a href="{{ movieDetail.link}}" class="card-link">{{ movieDetail.reviews}}</a></p>
										</div>
								</div>
		        </div>
		      </div>
		    </div>
		{% endblock %}
